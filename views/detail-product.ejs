<%- include('header') %>
<main class="flex flex-grow bg-gray-50 py-10 items-center">
  <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg border border-gray-200 p-8 flex flex-col h-full">
    <h1 class="text-4xl font-bold text-gray-800 mb-6 text-center">
      <%= product.name %>
    </h1>

    <div class="flex flex-col md:flex-row md:space-x-10 flex-1">

      <div class="flex-shrink-0 mb-6 md:mb-0 md:w-1/2 flex justify-center items-center">
        <% if (product.imageUrl) { %>
          <a href="<%= product.imageUrl %>">
            <img
              src="<%= product.imageUrl %>"
              alt="<%= product.name %>"
              class="w-full h-auto rounded-lg object-contain border border-gray-300 shadow-md transform transition-transform duration-300 hover:scale-105 cursor-zoom-in"
            />
          </a>
        <% } else { %>
          <div class="w-full h-64 bg-gray-200 rounded-lg flex items-center justify-center text-gray-400">
            <span><%= __("No Image Available") %></span>
          </div>
        <% } %>
      </div>

      <div class="md:w-1/2 flex flex-col flex-1 justify-center text-center">
        <p class="text-2xl font-semibold text-gray-700 mb-4">
          <%= __("Price") %>: <span class="text-green-600 font-bold">â‚¬<%= product.price ? product.price.toFixed(2) : "0.00" %></span>
        </p>

        <div class="mb-6">
          <span class="block text-gray-600 font-medium mb-2"><%= __("Tags") %>:</span>
          <% if (product.tags && product.tags.length) { %>
            <ul class="flex flex-wrap gap-2 justify-center">
              <% product.tags.forEach(tag => { %>
                <li class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm font-semibold shadow-sm">
                  <%= tag %>
                </li>
              <% }) %>
            </ul>
          <% } %>
        </div>

        <button
          type="button"
          onclick="window.location.href='/'"
          class="mt-auto inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition-all hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          <%= __("Back to home") %>
        </button>
      </div>

    </div>
  </div>
</main>
<%- include('footer') %>
