<%-include('header') %>

<div class="container">
  <h2><%= __("New Product") %></h2>

  <form action="/user/new" method="post" enctype="multipart/form-data">
    <div class="form-control col">
      <label for="name"><%= __("Name product") %>:</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Ej: iPhone 12"
        required
      />
    </div>

    <div class="form-control col">
      <label for="price"><%= __("Price") %> (â‚¬):</label>
      <input
        type="number"
        id="price"
        name="price"
        placeholder="Ej: 500"
        step="0.01"
        required
      />
    </div>

    <div class="form-control col">
      <label for="tags"><%= __("Tags") %>:</label>
      <br />
      <select name="tags" id="tags" multiple size="4" required>
        <option value="work"><%= __("Work") %></option>
        <option value="lifestyle"><%= __("Lifestyle") %></option>
        <option value="motor"><%= __("Motor") %></option>
        <option value="mobile"><%= __("Mobile") %></option>
      </select>
    </div>

    <div class="form-control">
      <label for="imagenFile"><%= __("Image") %>:</label>
      <div class="image-input-container">
        <input type="file" id="imagenFile" name="imagenFile" />
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary"><%= __("Upload") %></button>
      <a href="/" class="btn btn-secondary"><%= __("Cancel") %></a>
    </div>
  </form>
</div>

<%- include('footer') %>
