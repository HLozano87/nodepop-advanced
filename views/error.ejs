<%- include('header') %>
  <div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 text-center px-4">
    <h1 class="text-4xl font-bold text-red-600 mb-4">
      <%= message %>
    </h1>

    <h2 class="text-2xl text-gray-700 mb-2">
      <% if (error.status) { %>
        <%= error.status %>
      <% } %>
    </h2>

    <% if (error.stack) { %>
      <pre class="bg-white text-left text-sm text-gray-800 whitespace-pre-wrap p-4 rounded shadow-md max-w-2xl overflow-x-auto">
        <%= error.stack %>
      </pre>
    <% } %>

    <a href="/" class="mt-6 inline-block text-blue-600 hover:underline">
      <%= __("Back to home") %>
    </a>
  </div>
<%- include('footer') %>  